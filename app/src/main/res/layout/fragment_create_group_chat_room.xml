<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout.FillWidthHeight"
    android:padding="@dimen/padding_small">

    <LinearLayout
        android:id="@+id/ll_login_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Title"
            android:textSize="@dimen/text_normal"
            android:text="グループ名"
            android:layout_marginBottom="@dimen/padding_small"/>
        <EditText
            android:id="@+id/edt_user_name"
            android:layout_width="match_parent"
            android:height="@dimen/input_round_height"
            android:background="@drawable/bg_common_round_grey_border"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:layout_marginBottom="@dimen/padding_small"/>
        <TextView
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:text="アイコン画像"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal"
            android:layout_marginBottom="@dimen/padding_small"/>
        <LinearLayout
            android:layout_marginTop="@dimen/padding_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/attach_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_attach"/>
            <TextView
                android:layout_marginLeft="@dimen/padding_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="資料ファイル"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_btn_control"
        style="@style/Layout.FillWidth"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            style="@style/Button.Dialog.Fill.Medium"
            android:layout_marginBottom="@dimen/padding_small"
            android:background="@drawable/bg_common_round_blue"
            android:text="グループトークルーム作成"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>
</RelativeLayout>