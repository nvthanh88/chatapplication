<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="@dimen/padding_small">
    <TextView
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.Title"
        android:text="アプリ　パスワード忘れ"
        android:layout_marginBottom="@dimen/padding_normal"/>
    <LinearLayout
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="メールアドレス"
            android:layout_marginBottom="@dimen/padding_normal"/>
        <EditText
            android:id="@+id/edt_user_name"
            android:layout_width="match_parent"
            android:height="@dimen/input_round_height"
            android:background="@drawable/bg_common_round_grey_border"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:layout_marginBottom="@dimen/padding_normal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                style="@style/Button.Dialog.Fill.Medium"
                android:background="@drawable/bg_common_round_blue"
                android:textSize="@dimen/text_normal"
                android:layout_marginEnd="@dimen/padding_small"
                android:text="送信" />
            <Button
                style="@style/Button.Dialog.Fill.Medium"
                android:text="キャンセル"
                android:background="@drawable/bg_common_round_blue"
                android:textSize="@dimen/text_normal" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>