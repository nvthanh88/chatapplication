<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/cmn_yellow"
    android:padding="@dimen/padding_min">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height_medium"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tool_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Title"
            android:text="@string/app_name"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/btn_member_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_common_round_white_border_normal"
            android:layout_toStartOf="@id/btn_right_function"
            android:layout_centerVertical="true"
            android:text="メンバ"
            android:textSize="@dimen/text_small"
            android:layout_marginEnd="@dimen/padding_normal"/>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/btn_right_function"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_setting"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <android.support.v7.widget.SearchView
        android:visibility="gone"
        android:id="@+id/search_view"
        style="@style/Layout.FillWidth"
        android:background="@drawable/bg_common_round_white_border_normal">
    </android.support.v7.widget.SearchView>
</LinearLayout>

